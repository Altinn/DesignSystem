<div class="modal-content">
  <div class="modal-header a-modal-header">
    <div class="a-iconText a-iconText-background a-iconText-large">
      <div class="a-iconText-icon">
        <i class="ai ai-send
                 a-icon" aria-hidden="true"></i>
      </div>
      <h1 class="a-iconText-text mb-0">
        {{# small-modal-title }}<span class="a-iconText-text-small">{{ small-modal-title }}</span>{{/ small-modal-title }}
          <span class="a-iconText-text-large">Bestill varslingsmal</span>
      </h1>
    </div>
  </div>
  <div class="modal-body a-modal-body">

    {{# channel }}
      {{!-- Må velge minst én --}}
      <div class="mb-1">
        <form id="channel">
          {{> atomer-avkrysningsboks }}
        </form>
      </div>
      {{/ channel }}

      {{# sms-forms }}
        <div id="sms-form" class="collapse">
          {{!-- Må fylle ut minst én, dersom SMS er valgt --}}
          <h2>SMS</h2>
          {{# bokmaal }}
            {{> atomer-tekstfelt:mb-2 }}
            {{/ bokmaal }}
            {{# nynorsk }}
              {{> atomer-tekstfelt:mb-2 }}
              {{/ nynorsk }}
              {{# engelsk }}
                {{> atomer-tekstfelt:mb-6 }}
                {{/ engelsk }}
        </div>
        {{/ sms-forms }}

        {{# email-forms }}

          <div id="email-form" class="collapse mb-2">
            <h2>Epost</h2>
            {{# avsender }}
              {{!-- Obligatorisk --}}
              {{> atomer-tekst-input:mb-2 }}
              {{/ avsender }}
              {{!-- Må fylle ut minst én, dersom epost er valgt --}}
              {{# bokmaal }}
                {{> atomer-tekstfelt:mb-2 }}
                {{/ bokmaal }}
                {{# nynorsk }}
                  {{> atomer-tekstfelt:mb-2 }}
                  {{/ nynorsk }}
                  {{# engelsk }}
                    {{> atomer-tekstfelt:mb-6 }}
                    {{/ engelsk }}
          </div>
          {{/ email-forms }}

          {{# submit}}
            {{> atomer-knapp:mb-2 }}
            {{/ submit}}
  </div>
</div>

<!-- END: 02-organismer-81-Dashboard-modaler-meldinger-50-varslingsmal-2 -->