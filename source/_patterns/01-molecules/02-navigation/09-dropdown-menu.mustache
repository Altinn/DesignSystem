<div class="dropdown-menu {{{ class }}} a-dropdownTriangle">

  {{# dropdownItem }}
    <a class="dropdown-item" href="#">
      <img src="{{{ dropdownItem-image }}}" class="{{{ dropdownItem-imageClass }}}" alt="" />
      <p>
        <span class="a-textSize3">{{{ dropdownItem-title }}}</span><br>
        {{{ dropdownItem-content }}}
      </p>
    </a>
  {{/ dropdownItem }}

</div>
