<div class="a-iconText {{ variation-class }} {{styleModifier}}">
 <div class="a-iconText-icon {{iconOnTop}}">
   {{# hasIcon }}
     {{> atomer-ikon }}
   {{/ hasIcon }}
 </div>
 <div class="a-iconText-text">
  {{# hasTextSmall }}
    <p class="a-iconText-text-small">{{ textSmall }}</p>
  {{/ hasTextSmall }}

  {{# hasLink }}
    {{> atomer-link }}
  {{/ hasLink }}

  {{# hasButton }}
    {{> atomer-knapp }}
  {{/ hasButton }}

  {{# hasCode }}
    <span class="a-formCode">{{ formCode }}</span>
  {{/ hasCode }}

  {{# hasText }}
    <p class="mt-1 mb-0 {{# maxLines }}{{ maxLines }}{{/ maxLines }}">{{{hasText}}}</p>
  {{/ hasText }}
 </div>
</div>
