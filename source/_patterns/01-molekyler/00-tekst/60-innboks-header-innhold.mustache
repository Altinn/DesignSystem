<div class="row a-inboxHeadingContent{{# extra-class-headingContent }} {{ extra-class-headingContent }}{{/ extra-class-headingContent }}">
  {{# heading-icon }}
    <div class="col-auto a-msgIconWrapper">
      {{> atomer-ikon }}
    </div>
  {{/ heading-icon}}
  {{# heading-tekst }}
    <div class="col a-msgHeadingTextContainer">
      <div class="d-inline-block">
          {{# due-date-content }}
            <div class="col-auto hidden-md-up a-msgDuedate">
              <span>{{ due-date-label }}</span>
              {{ due-date }}
            </div>
          {{/ due-date-content }}
          <h2 class="mb-0">
            <span class="a-fontSizeL">{{ textDescription }}</span>
            <span class="a-fontSizeL a-msgTitle">{{ textMain }}</span>
          </h2>
        <div>{{ textSmall }}</div>
      </div>
    </div>
  {{/ heading-tekst }}

  {{# due-date-content }}
    {{# past-due-date }}
      <div class="col-auto hidden-sm-down a-msgDuedateIcon">
        {{> atomer-ikon }}
      </div>
    {{/ past-due-date }}
    <div class="col-auto hidden-sm-down a-msgDuedate">
      <span>{{ due-date-label }}</span>
      <span>{{ due-date }}</span>
    </div>
  {{/ due-date-content }}
  {{# shortcuts }}
    <div class="col-auto hidden-sm-down a-msgShortcutsContainer">
      {{# shortcut-icons }}
        {{> atomer-knapp-ikon-tekst }}
      {{/ shortcut-icons }}
    </div>
  {{/ shortcuts }}
</div>