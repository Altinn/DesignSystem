<div class="container px-1">
  <div class="row align-items-stretch a-inboxHeadingContent">
    {{# heading-icon }}
      <div class="col-auto align-items-center d-flex a-squareIconWrapper">
        {{> atomer-ikon }}
      </div>
    {{/ heading-icon}}
    {{# heading-tekst }}
      <div class="col align-self-center d-flex a-headingTextContainer pr-2">
        <div class="d-inline-block">
            {{# due-date }}
              <div class="col-auto align-self-center mr-2 hidden-md-up">
                <span class="a-duedate-lbl">{{ due-date-label }}</span>
                <span>{{ due-date }}</span>
              </div>
            {{/ due-date }}
            <h2 class="mb-0">
              <div class="a-fontSizeL a-msgDescription d-inline">{{ textDescription }}</div>
              <div class="a-fontSizeL d-inline">{{ textMain }}</div>
            </h2>
          <div>{{ textSmall }}</div>
        </div>
        {{# attachment-icon }}
          <div class="col-auto align-self-center pl-2">
            {{> atomer-ikon }}
          </div>
        {{/ attachment-icon }}
      </div>
    {{/ heading-tekst }}

    {{# due-date }}
      <div class="col-auto align-self-center mr-2 hidden-sm-down">
        <span class="a-duedate-lbl">{{ due-date-label }}</span>
        <span>{{ due-date }}</span>
      </div>
    {{/ due-date }}
    <div class="col-auto align-self-center hidden-sm-down mr-2 a-shortcutsContainer">
      {{# shortcut-icons }}
        {{> atomer-knapp-ikon-tekst }}
      {{/ shortcut-icons }}
    </div>
  </div>
</div>