<div class="modal-content">
    <div class="modal-header a-modal-header">
        <div class="a-iconText a-iconText-background a-iconText-large">
            <div class="a-iconText-icon">
                <i class="ai ai-send
                 a-icon" aria-hidden="true"></i>
            </div>
            <h1 class="a-iconText-text mb-0">
                 {{# small-modal-title }}<span class="a-iconText-text-small">{{ small-modal-title }}</span>{{/ small-modal-title }}
                <span class="a-iconText-text-large">{{ modal-title }}</span>
            </h1>
        </div>
    </div>
    <div class="modal-body a-modal-body">
      
      <form data-toggle="validator" id="contactForm">
        {{# environment }}
          {{> molekyler-valgknapper-og-spesifiser }}
        {{/ environment }}

        {{# ip }}
          {{> atomer-tekst-input:mb-4 }}
        {{/ ip }}

        {{# option }}
        <div class="mb-2">
          {{> atomer-radioknapp }}

          {{# mapper }}
          <div class="option1 collapse no-transition">
            {{> atomer-tekst-input }}
          </div>
          {{/ mapper }}
          {{# annet }}
            <div class="option2 collapse no-transition">
            {{> atomer-tekst-input }}
          </div>
          {{/ annet }}
        </div>
        {{/ option }}

        {{# information }}
          {{> atomer-tekstfelt:mb-2 }}
        {{/ information }}

        {{# submit}}
          {{> atomer-knapp:mb-2 }}
        {{/ submit}}
      </form>
  </div>
</div>
