<div class="modal-content">
    <div class="modal-header a-modal-header">
        <div class="a-iconText a-iconText-background a-iconText-large">
            <div class="a-iconText-icon">
                <i class="ai ai-send
                 a-icon" aria-hidden="true"></i>
            </div>
            <h1 class="a-iconText-text mb-0">
                <span class="a-iconText-text-small"></span>
                <span class="a-iconText-text-large">Bestill egen varslingsmal til varslingstjeneste</span>
            </h1>
        </div>
    </div>
    <div class="modal-body a-modal-body">
      
      {{# channel }}
        <div class="mb-1">
          <form id="channel">
            {{> atomer-avkrysningsboks }}
          </form>
        </div>
      {{/ channel }}
      
      {{# sms-forms }}
        <div id="sms-form" class="collapse">
          <h2>SMS</h2>
          {{# bokmaal }}
            {{> atomer-tekstfelt:mb-2 }}
          {{/ bokmaal }}
          {{# nynorsk }}
            {{> atomer-tekstfelt:mb-2 }}
          {{/ nynorsk }}
          {{# engelsk }}
            {{> atomer-tekstfelt:mb-6 }}
          {{/ engelsk }}
        </div>
      {{/ sms-forms }}

      {{# email-forms }}
        
        <div id="email-form" class="collapse mb-2">
          <h2>Epost</h2>
          {{# avsender }}
            {{> atomer-tekst-input:mb-2 }}
          {{/ avsender }}
          {{# bokmaal }}
            {{> atomer-tekstfelt:mb-2 }}
          {{/ bokmaal }}
          {{# nynorsk }}
            {{> atomer-tekstfelt:mb-2 }}
          {{/ nynorsk }}
          {{# engelsk }}
            {{> atomer-tekstfelt:mb-6 }}
          {{/ engelsk }}
        </div>
      {{/ email-forms }}
      
      {{# information }}
        {{> atomer-tekstfelt:mb-2 }}
      {{/ information }}

      {{# submit}}
        {{> atomer-knapp:mb-2 }}
      {{/ submit}}
    </div>
</div>
