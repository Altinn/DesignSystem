<div class="modal-content">
    <div class="modal-header a-modal-header">
        <div class="a-iconText a-iconText-background a-iconText-large">
            <div class="a-iconText-icon">
                <i class="ai ai-send a-icon" aria-hidden="true"></i>
            </div>
            <h1 class="a-iconText-text mb-0">
                <span class="a-iconText-text-small"></span>
                <span class="a-iconText-text-large">{{{ header-title }}}</span>
            </h1>
        </div>
    </div>
    <div class="modal-body a-modal-body">

      {{# form }}
        <form data-toggle="validator" id="contactForm">
          <div class="row">

            <div class="col-12 col-lg-8 mt-4">

              {{# description }}
                <p>{{ text }}</p>
              {{/ description }}

              {{#emne}}
                {{> atomer-tekst-input:mb-2 }}
              {{/emne}}
              
              {{#question}}
                {{> atomer-tekstfelt:mb-2 }}
              {{/question}}

              {{#link}}
                {{> atomer-tekst-input:mb-2 }}
              {{/link}}

              {{#linktext}}
                {{> atomer-tekst-input:mb-2 }}
              {{/linktext}}

              {{#receivers}}
                <label class="an-stackedLabel mt-2 mb-1" for="{{ inputId }}">
                  {{label-text}}
                </label>
                {{> atomer-avkrysningsboks }}
              {{/receivers}}

              {{#canal}}
                <label class="an-stackedLabel mt-2 mb-1" for="{{ inputId }}">
                  {{label-text}}
                </label>
                {{> atomer-avkrysningsboks }}
              {{/canal}}

              {{#time}}
                {{> molekyler-dato-og-tid:mt-2 }}
              {{/time}}

            </div>
            <div class="col-12 col-lg-4 px-0">
              {{# removeAlert }}
                {{> atomer-knapp-ikon-tekst }}
              {{/ removeAlert }}
            </div>
          </div>

          <div class="row mt-4">
            <div class="col-12 d-flex align-items-baseline">
              <div>
                {{# save }}
                  {{> atomer-knapp }}
                {{/ save }}
              </div>
              <div class="ml-2">
                {{# avbryt }}
                  {{> atomer-link }}
                {{/ avbryt }}
              </div>
          </div>
        </div>

        </form>
      {{/ form }} 
</div>
