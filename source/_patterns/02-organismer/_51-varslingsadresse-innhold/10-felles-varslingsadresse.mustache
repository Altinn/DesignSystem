{{# isModal }}
  <div class="modal-body a-modal-body">
{{/ isModal }}
  <div class="row">
    <div class="col-12 pb-2">
      {{# section-title }}
        {{> atomer-seksjonstittel }}
      {{/ section-title }}
      {{> atomer-intro-tekst:d-inline }}
      {{# varslingsadresse-information-popover }}      
        {{> atomer-link-med-popover-ikon }}
      {{/ varslingsadresse-information-popover }}
    </div>
  </div>
  {{# hasAddEmailLink }}
    <div class="row">
      <div class="col-12 pr-md-0">        
          {{> atomer-knapp:mr-1 }}      
      </div>
    </div> 
  {{/ hasAddEmailLink }}
  <div class="row">
    <div id="{{ email-section-title-id }}" class="col-12 pr-md-0">
      {{# email-sectiontitle }}
        <label class="a-form-label a-fontBold">{{ email-sectiontitle }}</label>
      {{/ email-sectiontitle }}
    </div>
  </div> 
  {{# shared-notificationinfo-email-input }}
    <div class="row a-email"  id="{{ email-input-row-id }}">
      <div class="col-10 col-md-7 pr-md-0">      
          {{> atomer-tekst-input }}      
      </div>
      {{# delete-shared-contactinfo-email-icon }}
        <div class="col-2 col-md-5 pr-md-0 a-delete-email {{# additional-class }}{{ additional-class }}{{/ additional-class }}">        
          {{> atomer-knapp-ikon-tekst }}        
        </div>
      {{/ delete-shared-contactinfo-email-icon }}
    </div>
  {{/ shared-notificationinfo-email-input }}
  {{# shared-notification-add-links}}
  <div class="row" id="{{ addmore-email-id }}">
    <div class="col-12 mt-1">
      {{# hasAddMoreEmailLink }}
        {{> atomer-knapp:mr-1 }}
      {{/ hasAddMoreEmailLink }}
      {{# hasAddSMSLink }}
        {{> atomer-knapp }}
      {{/ hasAddSMSLink }}
    </div>
  </div>
  {{/ shared-notification-add-links}}
  {{# additionalinfo-sharednotification }}
      <div id="{{sms-section-title-id}}" class="row mt-2 {{# additional-class }}{{ additional-class }}{{/ additional-class }}">
        <div class="col-12 pr-md-0">
          {{# sms-sectiontitle }}
            <label class="a-form-label a-fontBold">{{ sms-sectiontitle }}</label>
          {{/ sms-sectiontitle }}
        </div>
    </div>

    <div class="row a-sms {{# additional-class }}{{ additional-class }}{{/ additional-class }}" id="{{ sms-input-row-id }}">
      <div class="col-10 col-md-4 pr-md-0">
          {{# shared-notificationinfo-phone-input }}
            {{> atomer-tekst-input }}
          {{/ shared-notificationinfo-phone-input }}
      </div>
      <div class="col-2 col-md-8 pr-md-0 a-delete-sms">
        {{# delete-shared-contactinfo-phone-icon }}
          {{> atomer-knapp-ikon-tekst }}
        {{/ delete-shared-contactinfo-phone-icon }}
      </div>
    </div>
    {{# hasAddMoreSMSLink }}
      <div class="row {{# additional-class }}{{ additional-class }}{{/ additional-class }}" id ="{{ addmore-sms-id }}" >
        <div class="col-12 col-md-7 pr-md-0 mt-1">
            {{> atomer-knapp }}        
        </div>
      </div>
    {{/ hasAddMoreSMSLink }}    
  {{/ additionalinfo-sharednotification }}
    <div class="row">
      <div class="col-12 mt-2">
        {{# save-notificationaddress-button }}
          {{> atomer-knapp:mr-2 }}
        {{/ save-notificationaddress-button }}
        {{# cancel-notificationaddress-button }}
          {{> atomer-knapp }}
        {{/ cancel-notificationaddress-button }}
      </div>
    </div>
{{# isModal }}
  </div>
{{/ isModal }}