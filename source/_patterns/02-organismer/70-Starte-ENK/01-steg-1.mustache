<!-- Modal -->
<span class="a-scene a-page">
  <div class="a-modal {{ bodyClass }}" id="{{ modal-id }}" tabindex="-1" role="dialog" aria-labelledby="{{ modal-label }}" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">

      <div class="container">
        <div class="row">
          <div class="col-md-12">

            <!-- Modal Top -->
            <div class="a-modal-top">

              {{> atomer-logo }}

              <div class="a-modal-top-user">
                {{> atomer-innlogget }}
              </div>

            </div><!-- END Modal Top -->

          </div>
        </div>

        <div class="row">
          <div class="col-md-10 offset-md-1">
            <!-- Modal NavBar -->
            <div class="a-modal-navbar">

              {{# modalBack }}
              <button type="button" class="a-modal-back" onclick="goBack()" data-dismiss="modal" aria-label="Lukk">
                <i class="material-icons a-modal-back-icon">keyboard_backspace</i>
              </button>
              {{/ modalBack }}

              <button type="button" class="a-modal-close" data-dismiss="modal" aria-label="Lukk">
                <i class="material-icons a-modal-close-icon">close</i>
              </button>

            </div><!-- END Modal NavBar -->
          </div>
        </div>

        <div class="row">
          <div class="col-md-10 offset-md-1">

            <!-- Modal window -->
            <span class="a-right-panel a-page a-scene_element {{ animationClass }}">

              <div class="modal-content">

                <!-- Modal header -->
                <div class="a-panelIconLeft a-bgBlueDarker">
                    <i class="material-icons">{{{ modalHeader-icon }}}</i>

                    <div class="a-panelIconLeft-body">
                      {{#isIntroText}}
                      <span class="a-panelIconLeft-introText">
                         {{{ modalHeader-introText }}}
                        </span>
                      {{/isIntroText}}
                      <h1 class="a-textSize3">{{{ modalHeader-title }}}
                        <span class="a-panelIconLeft-code">{{modalHeader-title-code}}</span>
                      </h1>
                    </div>
                </div> <!-- END Modal header -->

                <!-- Modal body -->
                <div class="modal-body a-modal-body a-text">
                  <h2>Hva skal firmaet hete?</h2>
                  <p> {{{ modal-content }}}</p>

                  {{> atomer-tekst-input:input-group-large }}

                  <div class="a-btn-group">

                      {{# modal-nextbutton }}
                        {{> atomer-link }}
                      {{/ modal-nextbutton }}

                  </div>

                </div><!-- END Modal body -->

              </div>
            </span>  <!-- END Modal window -->

          </div>
        </div>
      </div>
    </div>
  </div>
</span>
