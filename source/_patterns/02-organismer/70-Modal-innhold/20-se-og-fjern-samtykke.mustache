<div {{# isModal }} class="modal-body a-modal-body" {{/ isModal }}>
  <div class="row">
    <div class="col-12 col-md-6 col-lg-7">
      {{# person-rolle }}
        {{> molekyler-person-rolle }}
      {{/ person-rolle }}
    </div>

    {{# showButton }}
      <div class="col-12 col-md pt-1">
        {{> atomer-knapp-med-popover }}
      </div>
    {{/ showButton }}
  </div>
  <div class="row">
    <div class="col">
        <h2 class="mt-4 a-fontSizeS a-fontBold">
          {{ consent-first-header }}
        </h2>
        <p class="a-fontSizeXS">
          {{ consent-first-text }}
        </p>
    </div>
  </div>  
  <div class="row">
    <div class="col">
      <h2 class="mt-2 mb-0 a-fontSizeS">
          {{ consent-second-header }}
      </h2>
      {{# expandable-text }}
        {{> atomer-ekspanderbar-tekst:a-fontSizeXS|a-fontBold|mt-1 }}
        <div id="{{ expandable-text-panel-id }}" aria-expanded="true" role="tabpanel" class="collapse show">
          <p class="a-fontSizeXS pt-1 mb-0 pb-1">
            {{ expandable-text-content }}
          </p>
        </div>
      {{/ expandable-text }}
    </div>
  </div>
  <div class="row">
    <div class="col">
      <p class="mt-3 a-fontBold a-fontSizeXS">
          {{ consent-expires-text }}
      </p>
    </div>
  </div>
</div>