<!-- Modal -->
<span class="a-scene a-page">
  <div class="a-modal {{ bodyClass }}" id="{{modal-id}}" tabindex="-1" role="dialog" aria-labelledby="{{modal-label}}" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">

      <div class="container">
        <div class="row">
          <div class="col-md-12">

            <!-- Modal Top -->
            <div class="a-modal-top">

              {{> atomer-logo }}

              <div class="a-modal-top-user">
                {{> atomer-innlogget }}
              </div>

            </div><!-- END Modal Top -->

          </div>
        </div>

        <div class="row">
          <div class="col-md-10 offset-md-1">

            <!-- Modal NavBar -->
            <div class="a-modal-navbar">

              {{# modalBack }}
              <button type="button" class="a-modal-back" onclick="goBack()" data-dismiss="modal" aria-label="Lukk">
                <i class="material-icons a-modal-back-icon">keyboard_backspace</i>
              </button>
              {{/ modalBack }}

              <script>
              function goBack() {
                  // window.history.back();
                  var arr = []
                  for (key in smoothState.cache) { arr.push(key) }
                  delete smoothState.cache[arr[arr.length - 1]]
                  arr.splice(-1,1)
                  $('.a-scene_element').addClass('a-tempAnim')
                  smoothState.load(arr[arr.length - 1])
              }
              </script>

              <button type="button" class="a-modal-close" data-dismiss="modal" aria-label="Lukk">
                <i class="material-icons a-modal-close-icon">close</i>
              </button>

            </div><!-- END Modal NavBar -->
          </div>
        </div>

        <div class="row">
          <div class="col-md-10 offset-md-1">

            <span class="a-right-panel a-page a-scene_element {{ animationClass }}">

              <!-- Modal window -->
              <div class="modal-content">

                <!-- Modal header -->
                <div class="modal-header a-modal-header">

                  <i class="material-icons a-panel-heading-icon">{{ modal-icon }}</i>

                  <div class="a-panel-heading-text" id="{{ modal-label }}">
                    <h2 class="modal-title a-modal-title">{{ modal-title }}</h2>
                  </div>

                </div><!-- END Modal header -->

                <!-- Modal body -->
                <div class="modal-body a-modal-body a-text">
                  <p> {{{ modal-content }}}</p>

                  <div class="a-btn-group">

                      {{# modal-nextbutton }}
                        {{> atomer-link }}
                      {{/ modal-nextbutton }}

                      {{# modal-successbutton }}
                        {{> atomer-link }}
                      {{/ modal-successbutton }}

                      {{# modal-startover }}
                        {{> atomer-link }}
                      {{/ modal-startover }}

                      {{# modal-errorbutton }}
                        {{> atomer-link }}
                      {{/ modal-errorbutton }}

                      {{# modal-discard }}
                        {{> atomer-link }}
                      {{/ modal-discard }}

                  </div>

                </div><!-- END Modal body -->
              </div><!-- END Modal window -->
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</span>
