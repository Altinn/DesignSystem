<!-- Modal -->
<span class="a-scene a-page">
  <div class="a-modal {{ bodyClass }}" id="{{ modal-id }}" tabindex="-1" role="dialog" aria-labelledby="{{ modal-label }}" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">

      <div class="container">
        <div class="row">
          <div class="col-md-12">

            <!-- Modal Top -->
            <div class="a-modal-top">
              <a href="{{ link.sider-forside }}" class="no-decoration">
                {{> atomer-logo }}
              </a>
              <div class="a-modal-top-user">
                {{> atomer-innlogget }}
              </div>
            </div><!-- END Modal Top -->

          </div>
        </div>

        <div class="row">
          <div class="col-md-10 offset-md-1">

            <!-- Modal NavBar -->
            <div class="a-modal-navbar">
              <button type="button" class="a-modal-back" onclick="location.href='{{{ btn-url }}}';" data-dismiss="modal" aria-label="Lukk">
                <i class="material-icons a-modal-back-icon">keyboard_backspace</i>
              </button>

              <button type="button" class="a-modal-close" onclick="location.href='{{ link.sider-starteogdrive }}';" data-dismiss="modal" aria-label="Lukk">
                <i class="material-icons a-modal-close-icon">close</i>
              </button>

            </div><!-- END Modal NavBar -->
          </div>
        </div>

        <div class="row">
          <div class="col-md-10 offset-md-1">

            <!-- Modal window -->
            <span class="a-right-panel a-page a-scene_element {{ animationClass }}">

              <div class="modal-content">

                <!-- Modal header -->
                <div class="a-panelIconLeft a-bgBlueDarker">
                    <i class="material-icons">{{{ modalHeader-icon }}}</i>

                    <div class="a-panelIconLeft-body">
                      {{#isIntroText}}
                      <span class="a-panelIconLeft-introText">
                         {{{ modalHeader-introText }}}
                        </span>
                      {{/isIntroText}}
                      <h1 class="a-textSize3">{{{ modalHeader-title }}}
                        <span class="a-panelIconLeft-code">{{modalHeader-title-code}}</span>
                      </h1>
                    </div>
                </div> <!-- END Modal header -->

                <!-- Modal body -->
                <div class="modal-body a-modal-body">


                  {{# modal-title }}
                    {{> atomer-seksjonstittel:m-b-2 }}
                  {{/ modal-title }}

                  {{# modal-lead }}
                    {{> atomer-intro-tekst }}
                  {{/ modal-lead }}

                  {{# modal-input-orgName }}
                    {{> atomer-tekst-input }}
                  {{/ modal-input-orgName }}

                  {{# modal-chooseCategory }}
                    <div class="a-modal-contentFullWidth m-t-4">
                      {{> atomer-radioknapp }}
                    </div>
                  {{/ modal-chooseCategory }}

                  {{# modal-input-textArea }}
                     {{> atomer-tekstfelt:m-y-4 }}
                  {{/ modal-input-textArea }}

                  {{# modal-input-radio }}
                    {{> atomer-radioknapp }}
                  {{/ modal-input-radio }}

                  {{# modal-input-adress }}
                    {{> organismer-adresse }}
                  {{/ modal-input-adress }}

                  {{# modal-date }}
                    {{> atomer-datovelger:m-t-3 }}
                  {{/ modal-date }}


                  <div class="a-btn-group m-t-2">
                    {{# modal-nextbutton }}
                      {{> atomer-knapp }}
                    {{/ modal-nextbutton }}

                    {{# modal-successbutton }}
                      {{> atomer-knapp }}
                    {{/ modal-successbutton }}

                    {{# modal-deactivated }}
                      {{> atomer-knapp }}
                    {{/ modal-deactivated }}

                    {{# modal-discard }}
                      {{> atomer-knapp }}
                    {{/ modal-discard }}
                  </div>

                  {{# modal-extraInfo }}
                    {{> atomer-liste-unummerert-kuler:m-x-1|m-t-4|a-bulletList-light }}
                  {{/ modal-extraInfo }}

                </div><!-- END Modal body -->

              </div><!-- END .modal-Content -->

              {{> atomer-link-hjelpefunksjon }}

            </span>  <!-- END Modal window -->

          </div>
        </div>
      </div>
    </div>
  </div>
</span>
