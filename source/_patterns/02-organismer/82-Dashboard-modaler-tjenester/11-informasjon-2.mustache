<div class="modal-content">
    <div class="modal-header a-modal-header">
        <div class="a-iconText a-iconText-background a-iconText-large">
            <div class="a-iconText-icon">
                <i class="ai ai-send
                 a-icon" aria-hidden="true"></i>
            </div>
            <h1 class="a-iconText-text mb-0">
                 {{# small-modal-title }}<span class="a-iconText-text-small">{{ small-modal-title }}</span>{{/ small-modal-title }}
                <span class="a-iconText-text-large">Rediger eller opprett informasjon om skjema / tjeneste p√• altinn.no</span>
            </h1>
        </div>
    </div>
    <div class="modal-body a-modal-body">
      
      {{# tekst-input-1 }}
        <div class="a-form-group mb-6">
            <div class="mb-2">
              <legend class="a-legend" for="{{ form-id }}">{{ top-label }}</label>
            </div>
            <form id={{ form-id }}>                
              {{# bokmaal }}
                {{> atomer-tekst-input:mb-2 }}
              {{/ bokmaal }}
              
              {{# nynorsk }}
                {{> atomer-tekst-input:mb-2 }}
              {{/ nynorsk }}
              
              {{# engelsk }}
                {{> atomer-tekst-input:mb-2 }}
              {{/ engelsk }}
            </form>
        </div>
      {{/ tekst-input-1 }}

      {{# tekstfelt-1 }}
        <div class="a-form-group mb-6">
          <div class="mb-2">
              <legend class="a-legend" for="{{ form-id }}">{{ top-label }}</label>
            </div>
          <form id={{ form-id }}>                
            {{# bokmaal }}
              {{> atomer-tekstfelt:mb-2 }}
            {{/ bokmaal }}
            {{# nynorsk }}
              {{> atomer-tekstfelt:mb-2 }}
            {{/ nynorsk }}
            {{# engelsk }}
              {{> atomer-tekstfelt:mb-2 }}
            {{/ engelsk }}
          </form>
        </div>
      {{/ tekstfelt-1 }}

      {{# submit}}
        {{> atomer-knapp:mb-2 }}
      {{/ submit}}
    </div>
</div>
