{{# checkbuttons }}
  <div class="a-switch">
    <input
      id="{{{ checkbuttons-id }}}"
      class="sr-only"
      type="checkbox"
      name="{{{ checkbuttons-id }}}"
      value="checkbutton-read"
      {{# isChecked }} checked {{/ isChecked}}>
    <label
      for="{{{ checkbuttons-id }}}"
      class="a-switch-label {{{ checkbuttons-class }}}">

      {{> atomer-ikon }}

      {{# checkbuttons-toggle-icon }}
        {{> atomer-ikon }}
      {{/ checkbuttons-toggle-icon }}
      {{{ checkbuttons-title }}}
    </label>
  </div>
{{/ checkbuttons }}