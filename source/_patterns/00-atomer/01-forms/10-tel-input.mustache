


<form data-toggle="validator">

  <div class="form-group a-form-group has-feedback">

    <div class="input-group">

      <!-- Label -->
      <label class="input-group-addon" for="inputTel">
          <i class="material-icons a-input-icon">&#xE324;</i>
          <span class="a-input-labelText control-label"> SMS:</span>
      </label>

      <!-- Input  -->
      <input type="tel" id="inputTel" class="form-control" placeholder="97999999" aria-describedby="tel_error" pattern="-?[0-9]*(\.[0-9]+)?" data-error="Kun tall er gyldig i dette feltet"> 

    </div>

    <i class="fa fa-check-circle form-control-feedback"></i>

    <div class="help-block with-errors a-message a-message-error"></div>

  </div>


</form>
