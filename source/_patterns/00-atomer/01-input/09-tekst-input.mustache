<div class="form-group a-form-group {{{ has-feedback }}} {{{ isLarge }}}" data-toggle="{{ isValidator }}" data-delay="{{ validator-delay }}">

    <div class="a-form-group-items {{ isInput-group }} {{ isDisabled }}">

      <!-- Label -->
      <label class="a-form-label {{ isHidden }} {{ form-label-class }}" for="{{ text-input-id }}">
          {{# form-label-hasIcon }}
            <i class="{{ form-label-iconClass }}"> {{{ form-label-icon }}} </i>
          {{/ form-label-hasIcon }}
          {{{ text-input-label }}}
      </label>

      <!-- Input  -->
      <input type="{{ input-type }}" 
        class="form-control {{ form-input-hasButton-class }}" 
        id="{{ text-input-id }}" 
        data-search-algorithm="{{ search-algorithm }}"
        data-search-target="{{ search-target }}" 
        pattern="{{validator-pattern}}" {{ isRequired }} 
        placeholder="{{text-input-placeholder}}" 
        value="{{text-input-value}}" 
        data-error="{{validator-errorMessage}}" 
        {{ isDisabled }}>
      <i class="fa fa-check-circle form-control-feedback"></i><span class="sr-only">Icon showing if input is valid or not</span>

      <!-- button -->
      {{# form-input-hasButton }}
      <div class="input-group-btn">
        <button class="btn btn-secondary" type="button">
          <i class="{{{ form-input-button-iconClass }}}"><span class="sr-only">{{ form-input-button-action }}</span>{{{ form-input-button-icon }}}</i>
        </button>
      </div>
      {{/ form-input-hasButton }}

    </div>

    {{# extra-help }}
    <small id="help" class="form-text a-validatorInfo">
      <i class="material-icons a-validatorInfo-icon {{ styleModifier }}"> {{{ validatorInfo-icon }}}</i>
      {{{ extra-helpText }}}
    </small>
    {{/ extra-help }}

    {{# validator-check }}
      <div class="help-block with-errors a-message a-message-error">{{{ validator-errorMessage }}}</div>
    {{/ validator-check }}

  </div>
