<button
  type="button"
  class="{{ button-class }} {{ styleModifier }}"
  {{# onclick }} onclick="{{ onclick }}" {{/ onclick }}
  {{# aria-label }} aria-label="{{ aria-label }}"{{/ aria-label }}
  {{# enable-popover }}
    data-toggle="popover"
    data-placement="{{ popover-placement}}"
    data-animation="false"
    data-popover-content="{{ popover-content-id }}"
    {{# popover-class }}data-popover-class="{{ popover-class }}"{{/ popover-class }}
    {{# data-trigger }} data-trigger="{{ data-trigger }}" {{/ data-trigger }}
  {{/ enable-popover }}>
  {{> atomer-ikon }}

  {{# display-as-link }}
    <span>
      {{ button-text }}
    </span>
  {{/ display-as-link }}
</button>

{{# enable-popover }}
  <div {{# popover-content-id }} id="{{ popover-content-id }}" {{/ popover-content-id }} class="hidden-xs-up">
    <div class="pb-1">{{ popover-text }}</div>
    {{# popover-buttons }}
      {{> atomer-knapp:mr-1 }}
    {{/ popover-buttons }}
  </div>
{{/ enable-popover }}
