<button
  type="button"
  class="{{ button-class }} {{ styleModifier }}"
  {{# onclick }} onclick="{{ onclick }}" {{/ onclick }}
  {{# aria-label }} aria-label="{{ aria-label }}"{{/ aria-label }}
  {{# enable-popover }}
    {{# popovercontainer-id }} data-container="#{{ popovercontainer-id }}"{{/ popovercontainer-id }}
    data-toggle="popover"
    data-placement="{{ popover-placement}}"
    data-animation="false"
    data-popover-content="{{ popover-content-id }}"
    {{# popover-class }}data-popover-class="{{ popover-class }}"{{/ popover-class }}
