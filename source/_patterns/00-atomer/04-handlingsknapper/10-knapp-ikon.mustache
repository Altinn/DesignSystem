  {{/ enable-popover }}>
  {{> atomer-ikon }}

  {{# display-as-link }}
    <span>
      {{ button-text }}
    </span>
  {{/ display-as-link }}
</button>

{{# enable-popover }}
  <div {{# popovercontainer-id }} tabindex="0" id="{{ popovercontainer-id }}" {{/ popovercontainer-id }}>
  </div>
  <div {{# popover-content-id }} role="popover" id="{{ popover-content-id }}" {{/ popover-content-id }} class="d-none">
    <div class="pb-1">{{ popover-text }}</div>
    {{# popover-buttons }}
