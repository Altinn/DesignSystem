<button type="button" class="{{{ button-class }}}" {{# has-children }} aria-expanded="false" {{/ has-children }} {{# data-target }} aria-owns="{{ data-target }}" data-toggle="instant" data-target="#{{ data-target }}"{{/ data-target }}>
  <span class="a-box-button-text">
    <span class="a-meta-text">
        {{ box-button-title }}
    </span>
    <span class="a-box-button-name">
        {{ box-button-person }}
    </span>
  </span>

  <i class="{{{i-class}}}">{{ box-button-icon }}</i>

  <b class="a-box-button-action a-blueDarkText a-box-button-primaryAction">
      {{ box-button-action }}
  </b>
  <b class="a-box-button-action a-blueDarkText a-box-button-secondaryAction">
      {{ box-button-secondary-action }}
  </b>
</button>