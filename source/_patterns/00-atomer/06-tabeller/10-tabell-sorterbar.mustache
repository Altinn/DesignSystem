<div class="{{# table-responsive }} table-responsive {{/ table-responsive}} {{# full-width-table }} a-full-width-table {{/ full-width-table }} {{# full-height-table }} a-full-height-table {{/ full-height-table }}">
  <table class="table a-sortable-table a-js-sortable"
    {{# sortable-table-id }} id="{{ sortable-table-id }}" {{/ sortable-table-id }}>
    <thead>
      {{# sortable-has-head }}
        <tr>
          {{# sortable-head-items }}
            <th {{# column-width }} style="width:{{ column-width }}" {{/ column-width }}
              {{# on-header-click }} onclick="{{ on-header-click }}" {{/ on-header-click }}>
              {{# sortable }}
                <span class="a-dropdownArrow"></span> 
              {{/ sortable }}
              {{ sortable-head-text }}
            </th>
          {{/ sortable-head-items }}
        </tr>
      {{/ sortable-has-head }}
    </thead>
    <tbody>
      {{# sortable-table-items }}
        <tr class="a-sortable-row {{# is-action-performed }}a-sortable-row-complete{{/ is-action-performed }}">
          {{# sortable-row-items }}
            <td {{# searchable }} data-searchable="true" {{/ searchable }}>         
              {{{ sortable-row-text }}} 
              {{# is-sortable-collapse-link }} 
                <span class="action-confirmation">{{ action-performed-confirmation }}</span>
              
                {{> atomer-ekspanderbar-tekst }} 

              {{/ is-sortable-collapse-link }}
            </td>
          {{/ sortable-row-items }}
        </tr>
        {{# sortable-action-items }}
          <tr class="a-sortable-action-row a-collapseContent collapse a-js-ignoreDuringSearch" 
            {{# target-table }} data-target-table="{{ target-table }}" {{/ target-table }}
            id="{{ sortable-action-id }}">
            <td colspan="4" class="pt-0">
              <span class="ml-4 pl-3">
               {{ sortable-action-text }}
              </span>
              <div class="text-xs-center">
                {{# sortable-action-items }}
                  {{> atomer-valgknapp}} 
                {{/ sortable-action-items }}
              </div>
              {{> molekyler-ferdigsegment:within-table }}
            </td>
          </tr>
        {{/ sortable-action-items }}
      {{/ sortable-table-items }}
    </tbody>
  </table>
</div>
