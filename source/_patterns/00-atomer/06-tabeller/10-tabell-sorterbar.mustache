<!-- Without sort-function -->
<div class="table-responsive">
    <table class="table a-table a-sortable-table">
        <thead>
            {{#sortable-has-head}}
                <tr>
                    {{#sortable-head-items}}
                        <th>
                            {{#sortable}}
                                <span class="a-dropdownArrow"></span>
                            {{/sortable}}
                            {{sortable-head-text}} </th>
                    {{/sortable-head-items}}
                </tr>
            {{/sortable-has-head}}
        </thead>
        <tbody>
            {{#sortable-table-items}}
                <tr class="a-sortable-row">
                    {{#sortable-row-items}}
                        <td>
                            {{{sortable-row-text}}}
                            {{#is-sortable-collapse-link}}
                                {{> atomer-ekspanderbar-tekst}}
                            {{/is-sortable-collapse-link}}
                        </td>
                    {{/sortable-row-items}}
                </tr>
                <tr class="a-sortable-action-row a-collapseContent collapse" id="{{sortable-action-id}}">
                    <td></td>
                    <td colspan="3">
                        <span>Velg rolle den ansatte skal ha:</span>
                        {{#sortable-action-items}}
                        {{> atomer-valgknapp}}
                        {{/sortable-action-items}}
                    </td>
                </tr>
            {{/sortable-table-items}}
        </tbody>
    </table>
</div>
