<div class="{{ full-width-table }}">
  <table class="table a-sortable-table a-table-list">
    <thead>
      {{# sortable-has-head }}
        <tr>
          {{# sortable-head-items }}
            <th {{# cell-align }} class="text-xs-right" {{/ cell-align }} >
              {{# sortable }}
                <span class="a-dropdownArrow"></span>
              {{/ sortable }}
              {{ sortable-head-text }}
            </th>
          {{/ sortable-head-items }}
        </tr>
      {{/ sortable-has-head }}
    </thead>
    <tbody>
      {{# sortable-table-items }}
        <tr class="a-sortable-row">
          {{# sortable-row-items }}
            <td {{# cell-align }} class="text-xs-right" {{/ cell-align }}>
              {{{ sortable-row-text }}}
            </td>
          {{/ sortable-row-items }}
        </tr>
      {{/ sortable-table-items }}
    </tbody>
  </table>
</div>
