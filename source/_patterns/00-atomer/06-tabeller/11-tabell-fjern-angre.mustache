<div class="{{ full-width-table }}">
  <table class="table a-sortable-table a-table-list" id="{{ table-remove-undo-id }}" data-table-eventhandler="{{ table-eventhandler }}">
    <thead>
      {{# sortable-has-head }}
        <tr class="a-sortable-row a-table-list">
          {{# sortable-head-items }}
            <th class="{{# is-first-column }} first {{/ is-first-column }} {{# cell-align }} text-xs-right col-pd-4 p-r-2 {{/ cell-align }}">
              {{# sortable }}
                <span class="a-dropdownArrow"></span>
              {{/ sortable }}
              {{{ sortable-head-text }}}
            </th>
          {{/ sortable-head-items }}
        </tr>
      {{/ sortable-has-head }}
    </thead>
    <tbody>
      {{# sortable-table-items }}
        <tr class="a-sortable-row {{# red-light }} red-light {{/ red-light }}">
          {{# sortable-row-items }}
            <td {{# cell-align }} class="text-xs-right p-r-2" {{/ cell-align }} {{# searchable }} data-searchable="true" {{/ searchable }}>
              {{{ sortable-row-text }}}
            </td>
          {{/ sortable-row-items }}
        </tr>
      {{/ sortable-table-items }}
    </tbody>
  </table>
</div>
