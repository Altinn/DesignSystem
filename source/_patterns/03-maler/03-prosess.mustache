
<!-- Modal -->
<span id="page">
<div class="a-modal {{{ bodyClass }}}">
  <div class="modal-dialog modal-lg" role="document">

    <!-- Modal Top -->
    <div class="a-modal-top">
      <img id="altinnlogo" class="a-modal-top-logo" alt="Altinn logo" src="{{{ logo }}}">

      <div id="represented-by-user" class="a-modal-top-user hidden-xs">

        <i class="material-icons a-modal-top-user-icon">person</i>

          <span class="a-modal-top-user-name">
            STEPHAN ISDAHL
          </span>
      </div>

      <div class="a-modal-navbar">

        <button type="button" class="a-modal-back" onclick="goBack()" aria-label="Lukk">
          <i class="material-icons a-modal-back-icon">keyboard_backspace</i>
        </button>

        <script>
        function goBack() {
            // window.history.back();
            var arr = []
            for (key in smoothState.cache) { arr.push(key) }
            delete smoothState.cache[arr[arr.length - 1]]
            arr.splice(-1,1)
            smoothState.load(arr[arr.length - 1])
        }
        </script>

        <a class="a-modal-close" href="/styleguide/html/styleguide.html">
          <i class="material-icons a-modal-close-icon">close</i>
        </a>


      </div>
    </div>

    <div class="a-scene">
      <div class="a-right-panel a-page a-scene_element a-scene_element--fadeinright">


        <!-- Modal content -->
        <div class="modal-content">
          <div class="modal-header a-modal-header">

            <i class="material-icons a-collapse-icon">devices</i>
            <h2 class="modal-title a-modal-title" id="myModalLabel">{{ process-title }}</h2>

          </div>
          <div class="modal-body a-modal-body a-text">
            <p>{{{ process-content }}}</p>

             <div class="a-btn-group">


              {{# process-nextbutton }}
                {{> atomer-link-button-success }}
              {{/ process-nextbutton }}

              {{# process-successbutton }}
                {{> atomer-link-button-success }}
              {{/ process-successbutton }}

              {{# process-startover }}
                {{> atomer-link-button }}
              {{/ process-startover }}

               {{# process-errorbutton }}
                {{> atomer-link-button-danger }}
              {{/ process-errorbutton }}

              {{# process-discardbutton }}
                {{> atomer-link }}
              {{/ process-discardbutton }}



            </div>

          </div>


        </div>

        </div>

    </div>

        {{> atomer-link-helpfunction }}





  </div>
</div>
</span>
