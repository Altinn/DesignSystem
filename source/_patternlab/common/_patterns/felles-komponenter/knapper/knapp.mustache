<button
  {{# button-type }} type="{{ button-type }}" {{/ button-type }}
  {{# onclick }} onclick="{{{ onclick }}}" {{/ onclick }}
  class="{{ buttonClass }} {{ styleModifier }}"
  {{# button-id }}id="{{ button-id }}"{{/ button-id }}
  {{# button-disabled }}{{ button-disabled }}{{/ button-disabled }}
  {{# data-toggle }}data-toggle="{{ data-toggle }}"{{/ data-toggle }}
  {{# data-action }}data-action="{{ data-action }}"{{/ data-action }}
  {{# data-parent }}data-parent="#{{ data-parent }}"{{/ data-parent }}
  {{# page-url }}data-url="{{{ page-url }}}"{{/ page-url }}
  {{# data-target }}data-target="{{ data-target }}"{{/ data-target }}
  {{# data-is-success }}data-is-success="{{ data-is-success }}"{{/ data-is-success }}
  {{# aria-expanded }}aria-expanded="{{ aria-expanded }}"{{/ aria-expanded }} {{{data-dismiss}}}
  {{# data-set-selected-target }} data-set-selected-target="{{ data-set-selected-target }}"{{/ data-set-selected-target }}>
  {{# display-as-link }}<span>{{/ display-as-link }}
    {{ button-text }}
  {{# display-as-link }}</span>{{/ display-as-link }}
</button>
