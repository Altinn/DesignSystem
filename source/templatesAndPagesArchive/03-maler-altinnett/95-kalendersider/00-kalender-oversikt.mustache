<div class="a-page">
    {{# header }}
        {{> organismer-header-altinnett }}
    {{/ header }}

    <main id="content" tabindex="-1">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-lg-10 offset-lg-1">

                    <div class="mb-4 mb-md-6">
                        {{# pageTitle }}
                            {{> atomer-sidetittel }}
                        {{/ pageTitle }}
                        {{#lead}}
                            {{> atomer-intro-tekst }}
                        {{/lead}}
                    </div>

                    {{#article-list}}
                        <div class="mb-4">
                            {{#list-title}}
                                <h2 class="a-fontBold a-fontSizeM mb-4">{{list-title}}</h2>
                            {{/list-title}}
                            <!-- note til backend: bruk a-date-day--small istedet for a-date-day for datoer som gÃ¥r over flere dager -->
                            <ul class="no-decoration">
                                {{#list-items}}
                                    <li>
                                        {{> molekyler-artikkel-teaser }}
                                    </li>
                                {{/list-items}}
                            </ul>
                            {{#list-link}}
                                <div class="mt-2 mb-6">
                                    {{> atomer-link-fremhevet }}
                                </div>
                            {{/list-link}}
                        </div>
                    {{/article-list}}

                    {{# list-article-loadmore }}
                        <div class="my-1 my-md-5">
                            {{> atomer-handlingsknapp }}
                        </div>
                    {{/ list-article-loadmore }}

                </div>
            </div>
        </div> <!-- END Container -->
    </main>

    {{# footer }}
        {{> organismer-footer-altinnett }}
    {{/ footer }}
</div>
