<!-- START: 00-atomer-01-forms-09-tekst-input -->
<div class="form-group a-form-group {{# has-feedback }}has-feedback{{/ has-feedback }} {{{ isLarge }}} {{# margin-override }} {{ margin-override }} {{/ margin-override }}"
  {{# isValidator }} data-toggle="validator" {{/ isValidator }}
  {{# validator-delay }} data-delay="{{ validator-delay }}" {{/ validator-delay }}>

    <div class="a-form-group-items {{ isInput-group }} {{ isDisabled }} {{# isTransparent }} transparent {{/ isTransparent }}">

      <!-- Label -->
      <label class="a-form-label {{ isHidden }} {{ form-label-class }}" for="{{ text-input-id }}">
        {{# form-label-hasIcon }}
          {{> atomer-ikon }}
        {{/ form-label-hasIcon }}
        {{{ text-input-label }}}
      </label>

      <!-- Input  -->
        <input type="{{ input-type }}"
          class="form-control {{ form-control-class }} {{ form-input-hasButton-class }} {{# no-left-padding }}pl-0{{/ no-left-padding }}"
          {{# text-input-id }}id="{{ text-input-id }}"{{/ text-input-id }}
          {{{validator-pattern}}}
          {{ isRequired }}
          placeholder="{{ text-input-placeholder }}"
          value="{{ text-input-value }}"
          {{# maxlength }}maxlength="{{ maxlength }}"{{/ maxlength }}
          data-error="{{ validator-errorMessage }}"
          {{ isDisabled }}
          data-search-algorithm="{{ search-algorithm }}"
          data-search-target="{{ search-target }}">
          {{# has-feedback }}
            {{> atomer-ikon }}
            <span class="sr-only">Icon showing if input is valid or not</span>
          {{/ has-feedback }}

        <!-- button -->
        {{# form-input-hasButton }}
        <div class="input-group-btn">
          <button class="btn btn-secondary" type="button">
            {{> atomer-ikon }}
          </button>
        </div>
        {{/ form-input-hasButton }}

        {{# postal-code }}
          <span class="a-input-placecode a-js-place" style="display:none;" ></span>
        {{/ postal-code }}

    </div>

    {{# extra-help }}
    <small id="help" class="form-text a-validatorInfo">
      {{> atomer-ikon }}
      {{{ extra-helpText }}}
    </small>
    {{/ extra-help }}


    {{# validator-check }}
      <div class="help-block with-errors a-message a-message-error {{ a-message-absolute }}">{{{ validator-errorMessage }}}</div>
    {{/ validator-check }}

  </div>

<!-- END: 00-atomer-01-forms-09-tekst-input -->
