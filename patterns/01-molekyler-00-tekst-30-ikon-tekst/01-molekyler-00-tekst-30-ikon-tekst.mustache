<div class="a-iconText {{ variation-class }} {{ styleModifier }}">
  <!-- ICON -->
  <div class="a-iconText-icon {{#iconPlacement}}{{iconPlacement}}{{/iconPlacement}}">{{# hasIcon }}{{> atomer-ikon }}{{/ hasIcon }}{{# hasDate }}{{> atomer-dato }}{{/ hasDate }}{{# hasImage }}<img {{# img-class }} class="{{ img-class }}" {{/ img-class }} src="{{ img-src }}" />{{/ hasImage }}</div>
  <!-- TEXT -->
  {{# isHeader }} {{^ isH2 }}
  <h1 class="a-iconText-text mb-0">
    {{/ isH2 }} {{# isH2 }}
    <h2 class="a-iconText-text mb-0">
      {{/ isH2 }} {{/ isHeader}} {{^ isHeader }}
      <div class="a-iconText-text">
        {{/ isHeader }} {{# hasTextSmall }}
        <span class="a-iconText-text-small">{{ textSmall }}</span> {{/ hasTextSmall }}
        <span class="a-iconText-text-large">{{ icontext }} {{{ badge }}} </span> {{# isHeader }} {{^ isH2 }}
  </h1>
  {{/ isH2 }} {{# isH2 }}
  </h2>
  {{/ isH2 }} {{/ isHeader}} {{^ isHeader }}
  </div>
  {{/ isHeader }}
</div>

