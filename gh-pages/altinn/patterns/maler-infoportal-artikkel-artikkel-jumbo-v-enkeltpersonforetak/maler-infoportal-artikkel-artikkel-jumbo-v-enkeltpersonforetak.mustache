					<div class="col-sm-12 col-lg-8 offset-lg-2 a-text epi-wysiwyg mt-2 mb-2">

							{{> felles-komponenter-avsnitt(paragraphContent:"Hva kjennetegner et enkeltpersonforetak:") }}

							{{# list-1 }}
								{{> felles-komponenter-liste-unummerert-kuler }}
							{{/ list-1 }}

							{{# card-bottom }}
