<div class="a-chat" id="chat">
    <p>
      Chat
      {{# close-icon }}
        {{> felles-komponenter-ikon }}
      {{/ close-icon }}
    <div class="a-chat-scrollarea">
        {{>atomer-snakkeboble(bubbleContent: "Hei! Kan jeg hjelpe deg?", hasMetaData: true, bubble-meta-data: "2 minutter siden")}}
        {{>atomer-snakkeboble(isFrom: "a-textBubble-from", bubbleContent: "Ja, veldig gjerne", hasMetaData: true, bubble-meta-data:"30 sekunder siden")}}
        {{>atomer-snakkeboble(isFrom: "a-textBubble-from", bubbleContent: "Jeg skal strikke lusekofter og holde kurs i kulturvern. Hva skal jeg søke på?", hasMetaData: true, bubble-meta-data:"Nå")}}
        {{>atomer-snakkeboble(bubbleContent: "...")}}
    </div>

    {{# input-chat }}
      {{> felles-komponenter-tekst-input }}
    {{/ input-chat }}

</div>
