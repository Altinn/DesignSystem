<div class="modal-content">
    <div class="modal-header a-modal-header">
        <div class="a-iconText a-iconText-background a-iconText-large">
            <div class="a-iconText-icon">
                <i class="ai ai-send
                 a-icon" aria-hidden="true"></i>
            </div>
            <h1 class="a-iconText-text mb-0">
                 {{# small-modal-title }}<span class="a-iconText-text-small">{{ small-modal-title }}</span>{{/ small-modal-title }}
                <span class="a-iconText-text-large">Rediger eller opprett informasjon om skjema / tjeneste p√• altinn.no</span>
            </h1>
        </div>
    </div>
    <div class="modal-body a-modal-body">

      {{# environment }}
        {{> felles-komponenter-valgknapper-og-spesifiser }}
      {{/ environment }}

      {{# skjemanummer }}
        <div class="mb-2">
          {{> felles-komponenter-tekst-input}}
        </div>
      {{/ skjemanummer }}

      {{# frameldinger }}
        {{# tjenestekoder }}
          <div class="row mb-2">
            <div class="col-12 col-lg-6">
              {{# tjenestekode }}
                {{> felles-komponenter-tekst-input}}
              {{/ tjenestekode }}
            </div>
            <div class="col-12 col-lg-6">
              {{# utgavekode }}
                {{> felles-komponenter-tekst-input}}
              {{/ utgavekode }}
            </div>
          </div>
        {{/ tjenestekoder }}
      {{/ frameldinger }}

      {{# in-inbox }}
        <div class="mb-2">
          {{> felles-komponenter-avkrysningsboks }}
        </div>
      {{/ in-inbox }}
   
      {{# publiseringsdato }}
      <div class ="a-form-group">
        <form id={{ form-id }}>
          {{> molekyler-utsett-tidspunkt }}
        </form> 
      </div>
      {{/ publiseringsdato }}

      {{# submit}}
        {{> felles-komponenter-knapp:mb-2 }}
      {{/ submit}}
    </div>
</div>
