  }} disabled{{/ disabled}}>

  {{# button-icon }}
    {{> atomer-ikon }}
  {{/ button-icon }}

  {{# button-dot }}
    <span class="a-dot {{dot-color}}"></span>
  {{/ button-dot }}
  {{# responsive-br }}
